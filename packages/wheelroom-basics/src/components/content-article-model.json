{
  "modelVersion": "1.0.0",
  "type": "contentArticle",
  "name": "Content Article",
  "displayField": "title",
  "description": "Article content",
  "fields": {
    "title": {
      "specs": {
        "name": "Title",
        "type": "Symbol",
        "required": true
      },
      "widgetId": "singleLine",
      "settings": {
        "helpText": "Title of the article"
      }
    },
    "subTitle": {
      "specs": {
        "name": "Sub title",
        "type": "Symbol",
        "required": true
      },
      "widgetId": "singleLine",
      "settings": {
        "helpText": "Sub title of the article"
      }
    },
    "slug": {
      "specs": {
        "name": "Slug",
        "type": "Symbol",
        "required": true,
        "validations": [
          {
            "unique": true
          }
        ]
      },
      "widgetId": "slugEditor",
      "settings": {
        "helpText": "Slug for the article"
      }
    },
    "author": {
      "specs": {
        "name": "Author",
        "type": "Symbol",
        "required": true
      },
      "widgetId": "singleLine",
      "settings": {
        "helpText": "Author of the article"
      }
    },
    "date": {
      "specs": {
        "name": "Date",
        "type": "Date",
        "required": true
      }
    },
    "image": {
      "specs": {
        "name": "Image",
        "type": "Link",
        "required": false,
        "linkType": "Asset",
        "validations": [
          {
            "linkMimetypeGroup": ["image"]
          }
        ]
      }
    },
    "articleText": {
      "specs": {
        "name": "Article text",
        "type": "RichText",
        "required": true
      }
    }
  }
}
