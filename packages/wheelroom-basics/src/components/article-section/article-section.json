{
  "modelVersion": "1.0.0",
  "type": "articleSection",
  "name": "Article section",
  "displayField": "title",
  "description": "Article section",
  "fields": {
    "title": {
      "specs": {
        "name": "Title",
        "type": "Symbol",
        "required": true,
        "validations": [{ "size": { "min": 0, "max": 255 } }]
      },
      "widgetId": "singleLine",
      "settings": {
        "helpText": "Never displayed, only used for listing within Contentful"
      }
    },
    "variation": {
      "specs": {
        "name": "Article variation",
        "type": "Symbol",
        "required": true,
        "validations": [
          {
            "in": [
              "Linked article text, derived from slug in url",
              "Inline article text, specific to this section"
            ]
          }
        ]
      },
      "widgetId": "dropdown",
      "settings": {
        "helpText": "Select section-opener"
      }
    },
    "articleText": {
      "specs": {
        "name": "Article text",
        "type": "RichText",
        "required": false,
        "localized": true
      }
    }
  }
}
